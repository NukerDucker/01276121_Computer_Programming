print(" *** Integer summation from 1 to n ***")
n = input("Enter an integer(n): ")
try:
    n = int(n)
    a = 1
    sum = 0
    print("Summation => ", end="")
    while a <= n:
        if a == n:
            print(f"{a}",end="")
        else:
            print(f"{a}+", end="")
        sum += a
        a += 1
    print(f" = {sum}")
except:
    print(" !!! INVALID input => " + n)
print("===== End of progrm =====\n")
